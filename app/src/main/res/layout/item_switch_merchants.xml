<?xml version="1.0" encoding="utf-8"?>
<com.hjq.shape.layout.ShapeRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_marginBottom="5dp"
    app:shape_radius="7dp"
    app:shape_solidColor="@color/color_42">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="36dp"
        android:src="@drawable/shop_top" />


    <com.hjq.shape.view.ShapeTextView
        android:id="@+id/tv_switch_merchants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:drawablePadding="5dp"
        android:paddingHorizontal="15dp"
        android:paddingVertical="6dp"
        android:text="元宇宙漂流局朝阳店"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:shape_radius="100dp"
        app:shape_solidColor="@color/color_17_4d" />

    <TextView
        android:id="@+id/tv_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_switch_merchants"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/shop_call"
        android:drawablePadding="7dp"
        android:text="+86 18235107237"
        android:textColor="@color/color_white_7f"
        android:textSize="12sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="23dp"
        android:layout_marginBottom="13dp"
        android:gravity="bottom"
        android:text="开店时间：2022/2/18"
        android:textColor="@color/color_white_7f"
        android:textSize="12sp" />


    <com.hjq.shape.view.ShapeTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="8dp"
        android:drawableRight="@drawable/shop_arrow"
        android:paddingHorizontal="9dp"
        android:drawablePadding="5dp"
        android:paddingVertical="4dp"
        android:text="点击查看"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        app:shape_radius="20dp"
        app:shape_strokeColor="@color/white"
        app:shape_strokeWidth="0.5dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:adjustViewBounds="true"

        android:src="@drawable/shop_bottom_bg" />
</com.hjq.shape.layout.ShapeRelativeLayout>