<?xml version="1.0" encoding="utf-8"?>
<com.hjq.shape.layout.ShapeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="14dp"
    android:layout_marginBottom="12dp"
    android:orientation="vertical"

    app:shape_radius="6dp"
    app:shape_solidColor="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="店铺logo审核未通过"
        android:paddingLeft="7dp"
        android:textColor="@color/color_00"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="2022/5/11 14:30"
        android:paddingLeft="7dp"
        android:textColor="@color/color_d4"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:textSize="12sp"
        android:paddingLeft="7dp"
        android:text="您修改的店铺logo未审核通过"
        android:textColor="@color/color_97" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:layout_marginHorizontal="4dp"
        android:background="@color/color_4d_97" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="14dp"
            android:paddingLeft="9dp"
            android:text="查看详情"
            android:textColor="@color/color_42"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingHorizontal="11dp"
            android:src="@drawable/iv_gray_back" />

    </RelativeLayout>
</com.hjq.shape.layout.ShapeLinearLayout>