<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_42">

    <ImageView
        android:id="@+id/iv_pic1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/merchanet_top_left" />

    <ImageView
        android:id="@+id/iv_pic2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:src="@drawable/merchant_top_right" />

    <ImageView
        android:id="@+id/iv_pic3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="136dp"
        android:src="@drawable/merchant_center" />

    <ImageView
        android:id="@+id/iv_pic4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="45dp"
        android:src="@drawable/merchant_bottom_left" />

    <ImageView
        android:id="@+id/iv_pic5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/merchant_bottom_right" />


    <com.hjq.shape.layout.ShapeRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="14dp"
        android:layout_marginTop="89dp"
        android:layout_marginBottom="58dp"
        android:orientation="vertical"
        app:shape_radius="21dp"
        app:shape_solidColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="42dp"
                android:src="@drawable/merchant_bule_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16.5dp"
                android:text="欢 迎 使 用 !"
                android:textColor="@color/color_17"
                android:textSize="20sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="61dp"
                android:text="手机号"
                android:textColor="@color/color_33"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="29dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/codenum"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="+86"
                    android:textColor="@color/color_42"
                    tools:ignore="RtlCompat" />

                <View
                    android:layout_width="0.8dp"
                    android:layout_height="13dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="15dp"
                    android:background="@color/color_d4" />

                <com.merchant.drifting.view.ClearEditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入手机号"
                    android:inputType="number"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/color_33"
                    android:textColorHint="@color/color_d4"
                    android:textCursorDrawable="@drawable/edit_cursor_color"
                    android:textSize="12sp" />

            </LinearLayout>

            <View
                android:id="@+id/view_line"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginHorizontal="25dp"
                android:background="@color/color_e9" />

            <com.hjq.shape.view.ShapeTextView
                android:id="@+id/tv_login"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/tv_merchant"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="37dp"
                android:gravity="center"
                android:text="验 证 码 登 录"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:shape_angle="270"
                app:shape_endColor="@color/color_ff"
                app:shape_radius="20dp"
                app:shape_startColor="@color/color_f9" />

            <RelativeLayout
                android:id="@+id/rl_agree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="12dp">

                <CheckBox
                    android:id="@+id/ck_protocol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@color/transparent"
                    android:button="@drawable/selector_protocol"
                    android:textColor="@color/white"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_protocol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/ck_protocol"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="阅读并同意商家中心的"
                    android:textColor="@color/color_9a"
                    android:textSize="11sp" />

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_open_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="22dp"
            android:text="我要开店"
            android:textColor="@color/color_97"
            android:textSize="14sp" />
    </com.hjq.shape.layout.ShapeRelativeLayout>

    <com.hjq.shape.layout.ShapeLinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="28dp"
        android:layout_marginBottom="45dp"
        app:shape_radius="21dp"
        app:shape_solidColor="@color/color_white_7f" />

</RelativeLayout>