<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
     android:layout_marginBottom="20dp"

    android:layout_marginEnd="15dp"
    android:orientation="vertical">

    <com.hjq.shape.layout.ShapeLinearLayout
        android:id="@+id/ll_content"
        android:layout_marginEnd="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:paddingTop="10dp"
        app:shape="rectangle"
        app:shape_radius="8dp"
        app:shape_shadowColor="@color/color_4d_00"
        app:shape_shadowSize="2dp"
        app:shape_solidColor="@color/white">


        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/icon_home_page" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_17"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="@color/color_42"
                android:textSize="14sp" />


        </RelativeLayout>


        <TextView
            android:id="@+id/tv_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="17dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:text=""
            android:textColor="@color/color_97"
            android:textSize="12sp" />

    </com.hjq.shape.layout.ShapeLinearLayout>


    <CheckBox
        android:id="@+id/sellect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:button="@null"
        android:visibility="gone"
        android:drawableLeft="@drawable/bg_commodity_checked"
        android:textSize="12sp"
         />


</RelativeLayout>