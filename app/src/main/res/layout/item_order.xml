<?xml version="1.0" encoding="utf-8"?>
<com.hjq.shape.layout.ShapeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="14dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    app:shape_radius="8dp"
    app:shape_shadowColor="@color/color_4d_00"
    app:shape_shadowSize="2dp"
    app:shape_solidColor="@color/white">


    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:id="@+id/tv_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单编号"
            android:textColor="@color/color_42"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_store_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_toRightOf="@+id/tv_store"
            android:text=""
            android:textColor="@color/color_17"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text=""
            android:textColor="@color/color_97"
            android:textSize="12sp" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="4dp"
        android:background="@color/color_4d_97" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        android:paddingLeft="12dp">


        <com.merchant.drifting.view.RatioImageView
            android:id="@+id/iv_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:corner_radius="3dp"
            android:src="@drawable/icon_home_page" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/iv_pic"
            android:text=""
            android:textColor="@color/color_42"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginStart="23dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/iv_pic"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/color_97"
            android:textSize="12sp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_desc"
            android:layout_alignBottom="@+id/iv_pic"
            android:layout_marginBottom="2dp">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_17"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp"
                android:text=""
                android:textColor="@color/color_97"
                android:textSize="12sp" />

        </RelativeLayout>


    </RelativeLayout>


</com.hjq.shape.layout.ShapeLinearLayout>
