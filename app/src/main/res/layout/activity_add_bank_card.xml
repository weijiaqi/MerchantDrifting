<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_title" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_f0" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingStart="24dp"
        android:paddingEnd="14dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawablePadding="16dp"
            android:text="姓名"
            android:textColor="@color/color_17"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:drawablePadding="16dp"
            android:hint="请输入姓名"
            android:paddingVertical="19dp"
            android:textColor="@color/color_17"
            android:textColorHint="@color/color_cc_d4"
            android:textCursorDrawable="@drawable/edit_cursor_color"
            android:textSize="14sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingStart="24dp"
        android:paddingEnd="14dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawablePadding="16dp"
            android:text="银行卡号"
            android:textColor="@color/color_17"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/et_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:drawablePadding="16dp"
            android:hint="请输入银行卡号"
            android:inputType="number"
            android:paddingVertical="19dp"
            android:textColor="@color/color_17"
            android:textColorHint="@color/color_cc_d4"
            android:textCursorDrawable="@drawable/edit_cursor_color"
            android:textSize="14sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingStart="24dp"
        android:paddingEnd="14dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawablePadding="16dp"
            android:text="开户行"
            android:textColor="@color/color_17"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/et_bank_deposit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:drawablePadding="16dp"
            android:hint="请输入开户行"
            android:paddingVertical="19dp"
            android:textColor="@color/color_17"
            android:textColorHint="@color/color_cc_d4"
            android:textCursorDrawable="@drawable/edit_cursor_color"
            android:textSize="14sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingStart="24dp"
        android:paddingEnd="14dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawablePadding="16dp"
            android:text="开户支行"
            android:textColor="@color/color_17"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/et_sub_branch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:drawablePadding="16dp"
            android:hint="请输入开户支行"
            android:paddingVertical="19dp"
            android:textColor="@color/color_17"
            android:textColorHint="@color/color_cc_d4"
            android:textCursorDrawable="@drawable/edit_cursor_color"
            android:textSize="14sp" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/color_f0"
        android:gravity="center_vertical"
        android:paddingLeft="14dp"
        android:text="*请填写与当前账号实名认证一致的银行卡"
        android:textColor="@color/color_ff0"
        android:textSize="12sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingEnd="14dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawablePadding="16dp"
            android:text="联系方式"
            android:textColor="@color/color_17"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:drawablePadding="16dp"
            android:paddingVertical="19dp"
            android:text=""
            android:textColor="@color/color_42"
            android:textSize="15sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="24dp"
        android:paddingEnd="14dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawablePadding="16dp"
            android:text="验证码"
            android:textColor="@color/color_17"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/et_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="16dp"
            android:hint="请输入验证码"
            android:paddingVertical="19dp"
            android:textColor="@color/color_17"
            android:textColorHint="@color/color_d4"
            android:textCursorDrawable="@drawable/edit_cursor_color"
            android:textSize="15sp" />

        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/tv_get_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.65"
            android:gravity="center"
            android:paddingTop="3dp"
            android:paddingBottom="4dp"
            android:text="获取验证码"
            android:textColor="@color/color_42"
            android:textSize="14sp"
            app:shape_radius="100dp"
            app:shape_solidColor="@color/color_f4" />


    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f0">

        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/tv_verification"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginHorizontal="46dp"
            android:layout_marginTop="48dp"
            android:gravity="center"
            android:text="验证"
            android:textColor="@color/white"
            app:shape_angle="270"
            app:shape_endColor="@color/color_ff"
            app:shape_radius="100dp"
            app:shape_startColor="@color/color_f9" />


    </FrameLayout>
</LinearLayout>